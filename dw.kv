<MyLabel@MDLabel>
    font_size: '25sp'
    haling: 'left'
    valing: 'middle'
    text_size: self.size

<Container>:
    rows: 3
    text_input: text_input
    label_hours: label_hours
    label_minutes: label_minutes
    label_seconds: label_seconds
    label_milliseconds: label_milliseconds

    AnchorLayout:
        anchor_y: 'top'
        size_hint: 1, 0.1
        padding: 30

        MDTextField:
            id: text_input
            text: ''
            font_size: '45sp'
            input_filter: 'int'
            inout_type: 'number'
            multiline: False
            hint_text: "Enter a number of days"

    GridLayout:
        cols: 2
        padding: [40, 0, 0, 0]

        BoxLayout:
            orientation: 'vertical'
            MyLabel:
                text: 'Hours'
            MyLabel:
                text: 'Minutes'
            MyLabel:
                text: 'Seconds'
            MyLabel:
                text: 'Milliseconds'


        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.5, 1
            MyLabel:
                text: '0'
                id: label_hours
            MyLabel:
                text: '0'
                id: label_minutes
            MyLabel:
                text: '0'
                id: label_seconds
            MyLabel:
                text: '0'
                id: label_milliseconds


    BoxLayout:
        size_hint: 0.9, 0.15
        padding: [30, 10, 30, 10]

        MDRaisedButton:
            text: 'Convert'
            font_size: '25sp'
            on_release:
                root.convert()